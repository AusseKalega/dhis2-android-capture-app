<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="enrollment"
            type="org.hisp.dhis.android.core.enrollment.EnrollmentModel" />

        <variable
            name="trackEntity"
            type="org.hisp.dhis.android.core.trackedentity.TrackedEntityInstanceModel" />

        <variable
            name="presenter"
            type="com.dhis2.usescases.teiDashboard.TeiDashboardContracts.Presenter" />

        <variable
            name="dashboardModel"
            type="com.dhis2.usescases.teiDashboard.DashboardProgramModel" />

        <variable
            name="program"
            type="org.hisp.dhis.android.core.program.ProgramModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_back"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:clipToPadding="false"
        android:focusableInTouchMode="true"
        app:cardCornerRadius="1.8dp"
        app:cardElevation="3dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/qrImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->presenter.onShareQRClick()}"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_arrow_back"
                app:tint="?attr/colorPrimary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:onClick="@{()->presenter.nextQr()}"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_arrow_forward"
                app:tint="?attr/colorPrimary" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>