<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="org.dhis2.utils.Constants"/>

        <variable
            name="viewModel"
            type="org.dhis2.usescases.settings.SettingsViewModel"/>

        <variable
            name="config"
            type="org.dhis2.usescases.settings.ConfigData"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:onClick="@{() -> viewModel.show(config)}"
            android:background="?attr/selectableItemBackground"
            android:padding="4dp"
            android:id="@+id/layoutTop"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/ic_sync_parameters"
                android:id="@+id/icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/sync_data_icon" />

            <TextView
                android:text="@string/sync_parameters_title"
                style="@style/sync_data_title"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/subtitle1"
                android:text="@string/lorem"
                android:paddingEnd="21dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toBottomOf="@id/title"
                style="@style/sync_data_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="@{viewModel.config == config ? View.VISIBLE : View.GONE}"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/layoutTop"
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearGlobal"
                android:layout_marginEnd="21dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="6dp"
                    android:text="@string/limit_by_organisation_unit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/switchGlobal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Switch
                    android:theme="@style/SwitchCompatTheme"
                    android:checked="@={viewModel.limitByOrgUnit}"
                    android:layout_margin="6dp"
                    android:id="@+id/switchGlobal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/linearGlobal"
                android:id="@+id/linearGlobalBottom"
                android:layout_marginEnd="21dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="6dp"
                    android:text="@string/limit_by_program"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/switchGlobal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Switch
                    android:theme="@style/SwitchCompatTheme"
                    android:checked="@={viewModel.limitByProgram}"
                    android:layout_margin="6dp"
                    android:id="@+id/switchGlobalBottom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <TableLayout
                android:id="@+id/table"
                android:layout_marginStart="62dp"
                app:layout_constraintTop_toBottomOf="@id/linearGlobalBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:padding="4dp"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_height="1dp"
                        android:layout_weight="2" />

                    <TextView
                        android:fontFamily="@font/rubik_regular"
                        android:text="Max"
                        android:textColor="@color/blueMaterial"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                    <TextView
                        android:fontFamily="@font/rubik_regular"
                        android:textColor="@color/blueMaterial"
                        android:text="Current"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                </TableRow>

                <TableRow android:padding="4dp">

                    <TextView
                        android:fontFamily="@font/rubik_bold"
                        android:textAlignment="textStart"
                        android:layout_weight="2"
                        android:text="Events" />

                    <EditText
                        android:hint="1"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:minWidth="30dp"
                        android:layout_width="wrap_content"
                        android:padding="4dp"
                        android:text="@={viewModel.eventDataMax}"
                        android:background="@color/greyish"
                        android:layout_weight="1" />


                    <TextView
                        android:textAlignment="center"
                        android:text="@{viewModel.eventCurrentdata}"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow android:padding="4dp">

                    <TextView
                        android:fontFamily="@font/rubik_bold"
                        android:textAlignment="textStart"
                        android:layout_weight="2"
                        android:text="TEI" />

                    <EditText
                        android:hint="1"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:minWidth="30dp"
                        android:layout_width="wrap_content"
                        android:padding="4dp"
                        android:text="@={viewModel.teiMaxData}"
                        android:background="@color/greyish"
                        android:layout_weight="1" />

                    <TextView
                        android:textAlignment="center"
                        android:text="@{viewModel.teiCurrentData}"
                        android:layout_weight="1" />

                </TableRow>

            </TableLayout>

            <Button
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/table"
                android:onClick="@{() -> viewModel.resetSyncParameters()}"
                android:layout_width="wrap_content"
                android:textColor="@color/blueMaterial"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:text="@string/reset_default" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimaryDarkText"
            app:layout_constraintTop_toBottomOf="@id/layoutBottom"
            android:layout_marginStart="72dp"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
