<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.dhis2.usescases.main.program.ProgramContractModule.Presenter" />
    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="15dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/button_time"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/period_button"
                        android:onClick="@{()->presenter.onTimeButtonClick()}"
                        android:padding="7dp"
                        app:srcCompat="@drawable/ic_view_week" />

                    <TextView
                        android:id="@+id/button_date_range"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/period_time_button"
                        android:gravity="center"
                        android:onClick="@{()->presenter.onDateRangeButtonClick()}"
                        android:padding="7dp"
                        android:text="DD/MM/YYYY"
                        android:textColor="?colorAccent" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_org_unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_white_button"
                    android:maxLines="1"
                    android:minHeight="40dp"
                    android:onClick="@{()->presenter.onOrgUnitButtonClick()}"
                    android:paddingStart="15dp"
                    android:text="Org Unit"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/black_de0"
                    android:textSize="15sp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/program_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:initGrid="@{false}"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    tools:listitem="@layout/item_program" />

                <ProgressBar
                    android:id="@+id/program_progress"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    app:progressColor="@{@color/colorPrimary}" />

            </RelativeLayout>

        </LinearLayout>


        <android.support.design.widget.NavigationView
            android:id="@+id/org_unit_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/white_faf"
            android:fitsSystemWindows="false"
            app:itemTextColor="@color/colorPrimary">

            <RelativeLayout
                android:id="@+id/tree_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingTop="40dp" />

            <LinearLayout
                android:id="@+id/linear_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="40dp" />

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>
</layout>
