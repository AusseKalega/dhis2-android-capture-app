<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.dhis2.R" />

        <variable
            name="presenter"
            type="com.dhis2.usescases.programDetail.ProgramDetailContractModule.Presenter" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?colorPrimary"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{()->presenter.onBackClick()}"
                android:padding="15dp"
                app:srcCompat="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@{presenter.currentProgram.title()}"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            tools:openDrawer="end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="15dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp">


                    <Button
                        android:id="@+id/button_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_white_button"
                        android:drawableEnd="@{@drawable/ic_arrow_drop_down_black_24dp}"
                        android:minHeight="40dp"
                        android:onClick="@{()->presenter.onTimeButtonClick()}"
                        android:paddingStart="15dp"
                        android:text="Time"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/black_de0"
                        android:textSize="15sp" />


                    <Button
                        android:id="@+id/button_date_range"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_white_button"
                        android:drawableEnd="@{@drawable/ic_date_range}"
                        android:minHeight="40dp"
                        android:onClick="@{()->presenter.onDateRangeButtonClick()}"
                        android:paddingEnd="5dp"
                        android:paddingStart="15dp"
                        android:text="Date Range"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/black_de0"
                        android:textSize="15sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:gravity="end|center_vertical"

                    >

                    <Button
                        android:id="@+id/button_org_unit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@{@drawable/selector_white_button}"
                        android:maxLines="1"
                        android:minHeight="40dp"
                        android:onClick="@{()->presenter.onOrgUnitButtonClick()}"
                        android:paddingStart="15dp"
                        android:text="Org Unit"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/black_de0"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/button_cat_combo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_white_button"
                        android:drawableEnd="@{@drawable/ic_arrow_drop_down_black_24dp}"
                        android:minHeight="40dp"
                        android:onClick="@{()->presenter.onCatComboButtonClick()}"
                        android:paddingStart="15dp"
                        android:text="Cat Combo"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/black_de0"
                        android:textSize="15sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_program" />

                    <ProgressBar
                        android:id="@+id/program_progress"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        app:progressColor="@{@color/colorPrimary}" />

                    <ImageButton
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="20dp"
                        android:background="@drawable/oval_23"
                        android:onClick="@{()->presenter.onSearchClick()}"
                        android:paddingBottom="7dp"
                        app:srcCompat="@drawable/ic_searchandnew" />

                </RelativeLayout>

            </LinearLayout>


            <android.support.design.widget.NavigationView
                android:id="@+id/org_unit_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@color/white_faf"
                android:fitsSystemWindows="false"
                app:itemTextColor="@color/colorPrimary">

                <RelativeLayout
                    android:id="@+id/tree_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="20dp"
                    android:paddingTop="40dp" />

                <LinearLayout
                    android:id="@+id/linear_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="40dp" />

            </android.support.design.widget.NavigationView>

        </android.support.v4.widget.DrawerLayout>

    </LinearLayout>
</layout>
