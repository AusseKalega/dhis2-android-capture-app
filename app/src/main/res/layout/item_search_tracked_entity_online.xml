<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="java.lang.String" />

        <variable
            name="adapterPosition"
            type="java.lang.Integer" />

        <variable
            name="presenter"
            type="com.dhis2.usescases.searchTrackEntity.SearchTEContractsModule.Presenter" />

        <variable
            name="tei"
            type="org.hisp.dhis.android.core.trackedentity.TrackedEntityInstanceModel" />

        <variable
            name="followUp"
            type="java.lang.Boolean" />

    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/tracked_entity_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/tracked_entity_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/photo_temp"
                tools:ignore="ContentDescription" />

            <!-- <ImageView
                 android:id="@+id/follow_up"
                 android:layout_width="34dp"
                 android:layout_height="34dp"
                 android:layout_alignBottom="@id/tracked_entity_image"
                 android:layout_alignEnd="@id/tracked_entity_image"
                 android:layout_gravity="center_vertical"
                 android:background="@drawable/ic_circle_red"
                 android:padding="8dp"
                 android:visibility='@{followUp ? View.VISIBLE : View.GONE}'
                 app:srcCompat="@drawable/ic_warning_white"
                 tools:ignore="ContentDescription" />-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_toEndOf="@id/tracked_entity_image"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/entity_attribute_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black_de0"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/entity_attribute_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black_de0"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="@{(view)->presenter.downloadTei(view,tei.uid(),progress,adapterPosition)}"
                android:tint="?attr/colorPrimary"
                app:srcCompat="@drawable/ic_download"
                android:contentDescription="@string/app_name" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                app:progressColor="@{@color/colorPrimary}"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>
