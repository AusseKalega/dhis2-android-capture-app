<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.dhis2.R" />
        <variable
            name="name"
            type="java.lang.String"/>
        <variable
            name="event"
            type="org.hisp.dhis.android.core.event.EventModel"/>
        <variable
            name="isNewEvent"
            type="boolean"/>
        <variable
            name="presenter"
            type="com.dhis2.usescases.eventInitial.EventInitialContract.Presenter" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?colorPrimary"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{()->presenter.onBackClick()}"
                android:padding="15dp"
                app:srcCompat="@drawable/ic_arrow_back"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@{ name }"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <android.support.v4.widget.DrawerLayout
                android:id="@+id/drawer_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="false"
                tools:openDrawer="end">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v4.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:baselineAligned="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:contentDescription='@{name}'
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        app:srcCompat="@drawable/photo_temp" />

                                    <!--TODO CRIS: PROGRAM COLOR-->
                                    <ImageView
                                        android:contentDescription='@{name}'
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="4dp"
                                        android:tint="@color/red_060"
                                        app:srcCompat="@drawable/ic_program_border" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="?colorPrimary"
                                        app:programStage='@{event.programStage()}'/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        app:programStageDescription='@{event.programStage()}'/>

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/date"
                                    android:theme="@style/dataInputText">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:focusable="false"
                                        android:textSize="15sp"
                                        android:text='@{event != null ? event.eventDate().toLocaleString() : ""}'/>
                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>


                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/org_unit"
                                android:layout_marginTop="16dp"
                                android:theme="@style/dataInputText">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/org_unit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:onClick="@{()->presenter.onOrgUnitButtonClick()}"
                                    android:focusable="false"/>

                            </android.support.design.widget.TextInputLayout>


                            <Spinner
                                android:id="@+id/cat_combo"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="3dp"
                                android:maxLines="1"
                                android:minHeight="40dp"
                                android:textAlignment="textStart"
                                android:textAllCaps="false"
                                android:textColor="?colorPrimary"
                                android:textSize="15sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.8dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:background="@color/black_de0"/>


                            <LinearLayout
                                android:baselineAligned="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/latitude"
                                        android:theme="@style/dataInputText">

                                        <android.support.design.widget.TextInputEditText
                                            android:id="@+id/lat"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="numberDecimal"
                                            android:textSize="15sp"
                                            android:text='@{event != null ? event.latitude() : ""}'/>

                                    </android.support.design.widget.TextInputLayout>


                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/longitude"
                                        android:theme="@style/dataInputText">

                                        <android.support.design.widget.TextInputEditText
                                            android:id="@+id/lon"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="numberDecimal"
                                            android:textSize="15sp"
                                            android:text='@{event != null ? event.longitude() : ""}'/>

                                    </android.support.design.widget.TextInputLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center">

                                    <ImageButton
                                        android:id="@+id/location1"
                                        android:contentDescription='@{name}'
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:padding="6dp"
                                        android:background="@drawable/selector_gray_button_round_7"
                                        app:srcCompat="@drawable/ic_my_location"/>

                                    <ImageButton
                                        android:id="@+id/location2"
                                        android:contentDescription='@{name}'
                                        android:layout_marginTop="16dp"
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:padding="6dp"
                                        android:background="@drawable/selector_gray_button_round_7"
                                        app:srcCompat="@drawable/ic_place" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="120dp"/>
                        </LinearLayout>
                    </android.support.v4.widget.NestedScrollView>

                    <Button
                        android:id="@+id/action_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/selector_button_round_7"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:text="@string/create"
                        android:onClick="@{()->presenter.createEvent()}"/>
                </RelativeLayout>

                <android.support.design.widget.NavigationView
                    android:id="@+id/org_unit_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@color/white_faf"
                    android:fitsSystemWindows="false"
                    app:itemTextColor="?colorPrimary">

                    <RelativeLayout
                        android:id="@+id/tree_view_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="40dp" />

                    <LinearLayout
                        android:id="@+id/linear_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:paddingTop="40dp" />

                </android.support.design.widget.NavigationView>
        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>
</layout>
