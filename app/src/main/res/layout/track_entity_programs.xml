<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="java.lang.String" />

        <import type="org.hisp.dhis.android.core.common.BaseNameableObjectModel" />

        <variable
            name="program"
            type="org.hisp.dhis.android.core.program.ProgramModel" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:gravity="start">

            <TextView
                android:id="@+id/program_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{ program.displayShortName() }"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="ANC" />

            <ImageView
                android:id="@+id/program_image"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_program"
                app:tintRandomColor="@{program.uid()}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/program_last_update_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Last Visit:"
                android:textSize="14sp"
                tools:text="Last visit: " />

            <TextView
                android:id="@+id/program_last_update_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="2012-12-05"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</layout>
