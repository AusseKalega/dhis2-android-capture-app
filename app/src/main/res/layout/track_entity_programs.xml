<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="java.lang.String" />

        <variable
            name="program"
            type="com.dhis2.usescases.main.program.HomeViewModel" />

        <variable
            name="programString"
            type="java.lang.String" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/program_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="@{ programString }"
            tools:text="ANC" />


        <ImageView
            android:id="@+id/program_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/program_name"
            android:src="@color/defaultColor_4"
            tools:src="@drawable/program_shape" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/program_name"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/program_last_update_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/program_name"
                android:layout_marginStart="5dp"
                android:text="Last Visit:"
                android:textSize="14sp"
                tools:text="Last visit: " />

            <TextView
                android:id="@+id/program_last_update_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text='@{ programString + "date" }'
                android:textSize="14sp"
                tools:text="2012-12-05" />
        </LinearLayout>

    </RelativeLayout>

</layout>
