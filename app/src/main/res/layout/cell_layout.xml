<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cell"
            type="com.dhis2.usescases.main.trackentitylist.CellModel"/>

        <variable
            name="presenter"
            type="com.dhis2.usescases.main.trackentitylist.TrackEntityListContractsModule.Presenter" />
    </data>

    <LinearLayout
        android:id="@+id/cell_container"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/table_row_white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cell_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@{cell.name}"
            android:maxLines="1"
            android:textColor="@color/cell_text_color"
            android:textSize="12sp"
            tools:text="Cell Data"/>

    </LinearLayout>

</layout>

