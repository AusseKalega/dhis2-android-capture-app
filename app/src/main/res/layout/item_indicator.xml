<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="indicator"
            type="org.hisp.dhis.android.core.program.ProgramIndicatorModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="19.5dp"
        android:paddingEnd="10dp"
        android:paddingStart="29dp"
        android:paddingTop="19.5dp">

        <TextView
            android:id="@+id/indicator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="#787878"
            android:textSize="14.2sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text='@{indicator.displayShortName()}'/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif"
            android:textColor="#444444"
            android:textSize="13.3sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/indicator_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="James Johnson"
            android:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>
</layout>