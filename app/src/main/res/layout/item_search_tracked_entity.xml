<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="java.lang.String" />

        <variable
            name="presenter"
            type="com.dhis2.usescases.searchTrackEntity.SearchTEContractsModule.Presenter" />

        <variable
            name="program"
            type="org.hisp.dhis.android.core.program.ProgramModel" />

        <variable
            name="orgUnit"
            type="java.lang.String" />

        <variable
            name="attribute"
            type="java.util.List&lt;String&gt;" />

        <variable
            name="programString"
            type="java.lang.String" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/tracked_entity_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/tracked_entity_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/photo_temp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:layout_toEndOf="@id/tracked_entity_image"
                >

                <TextView
                    android:id="@+id/entity_attribute_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text='@{attribute.size()>0 ? attribute.get(0) : "" , default="attribute 1"}'
                    android:textColor="@color/black_de0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility='@{attribute.size()>0?View.VISIBLE:View.GONE}' />

                <TextView
                    android:id="@+id/entity_attribute_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text='@{attribute.size() > 1 ? attribute.get(1) : "" , default="attribute 2"}'
                    android:textColor="@color/black_de0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility='@{attribute.size() > 1 ? View.VISIBLE : View.GONE}' />

                <TextView
                    android:id="@+id/entity_attribute_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text='@{attribute.size() > 2 ? attribute.get(2) : "", default="attribute 3"}'
                    android:textColor="@color/black_de0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility='@{attribute.size() > 2 ? View.VISIBLE : View.GONE}' />
            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tracked_entity_image"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                app:alignItems="flex_end"
                app:flexWrap="wrap"
                app:justifyContent="space_between">

            </com.google.android.flexbox.FlexboxLayout>

            <RelativeLayout
                android:id="@+id/buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_layout"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/add_program"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="13.5dp"
                    app:srcCompat="@drawable/ic_add_circle" />

                <TextView
                    android:id="@+id/view_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/add_program"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:text="View More"
                    android:textAllCaps="true"
                    android:textColor="?colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="view more" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>
