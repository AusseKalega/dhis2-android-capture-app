<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="program"
            type="org.hisp.dhis.android.core.program.ProgramModel" />

        <variable
            name="trackEntity"
            type="org.hisp.dhis.android.core.trackedentity.TrackedEntityInstance" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/tei_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="1.8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="7dp">


                <ImageView
                    android:id="@+id/program_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_lock_open_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:maxWidth="60dp"
                    android:textColor="#787878"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/program_lock"
                    app:layout_constraintStart_toStartOf="@id/program_lock"
                    app:layout_constraintTop_toBottomOf="@id/program_lock"
                    tools:text="Open" />


                <TextView
                    android:id="@+id/view_tei"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8sp"
                    android:textColor="#1d69a3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="VIEW MORE" />

                <TextView
                    android:id="@+id/edit_tei"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="8sp"
                    android:textColor="#1d69a3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/view_tei"
                    tools:text="EDIT" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/data_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:alignContent="stretch"
                    app:alignItems="stretch"
                    app:flexWrap="wrap"
                    app:layout_constraintBottom_toTopOf="@id/view_tei"
                    app:layout_constraintEnd_toStartOf="@id/program_lock"
                    app:layout_constraintStart_toStartOf="parent">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/tei_image"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@drawable/photo_temp" />


                        <TextView
                            android:id="@+id/main_attributes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/gray_444"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/tei_image"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Sarah Thompson"
                            android:text="@{trackEntity.uid()}"/>

                        <TextView
                            android:id="@+id/secundary_attribute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/gray_444"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@id/tei_image"
                            app:layout_constraintTop_toBottomOf="@id/main_attributes"
                            tools:text="26dp" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".6" />

                        <TextView
                            android:id="@+id/incident_date_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/icon_color"
                            android:textSize="14sp"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Date of diagnosis:"
                            android:text="@{program.incidentDateLabel()}"/>

                        <TextView
                            android:id="@+id/enrollment_date_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/icon_color"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/incident_date_label"
                            tools:text="Date of enrollment:"
                            android:text="@{program.enrollmentDateLabel()}"/>

                        <TextView
                            android:id="@+id/org_unit_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/icon_color"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/enrollment_date_label"
                            tools:text="Enrolling OU:" />

                        <TextView
                            android:id="@+id/incident_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/gray_444"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/incident_date_label"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="DD/MM/YYYY" />

                        <TextView
                            android:id="@+id/enrollment_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/gray_444"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@id/incident_date"
                            app:layout_constraintTop_toBottomOf="@id/incident_date"
                            tools:text="DD/MM/YYYY" />

                        <TextView
                            android:id="@+id/org_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/gray_444"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@id/incident_date"
                            app:layout_constraintTop_toBottomOf="@id/enrollment_date"
                            tools:text="Ngelehum CHC" />
                    </android.support.constraint.ConstraintLayout>
                </com.google.android.flexbox.FlexboxLayout>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tei_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:paddingTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/tei_data"
            tools:listitem="@layout/item_event" />

    </android.support.constraint.ConstraintLayout>
</layout>
