<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerTheme</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="RedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerThemeRed</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerThemeRed</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerThemeGreen</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerThemeGreen</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DatePickerThemeRed" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red_060</item>
        <item name="android:colorAccent">@color/red_060</item>
    </style>

    <style name="DatePickerTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="DatePickerThemeGreen" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryGreen</item>
        <item name="android:colorAccent">@color/colorPrimaryGreen</item>
    </style>

    <style name="TimePickerTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TimePickerThemeRed" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red_060</item>
        <item name="android:colorAccent">@color/red_060</item>
    </style>

    <style name="TimePickerThemeGreen" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryGreen</item>
        <item name="android:colorAccent">@color/colorPrimaryGreen</item>
    </style>

    <style name="loginInputText"><!--parent="TextAppearance.AppCompat"-->
        <item name="android:textColorHint">?colorPrimary</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorControlNormal">?colorPrimary</item>
        <item name="colorControlActivated">?colorPrimary</item>
    </style>

    <style name="loginInputTextAccent" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="dhisInputTextColorPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">?colorPrimary</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorControlNormal">?colorPrimary</item>
        <item name="colorControlActivated">?colorPrimary</item>
    </style>

    <style name="dataInputTextAccent" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <style name="dataInputText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="checkBox" parent="Base.Theme.AppCompat">
        <item name="colorAccent">?colorPrimary</item>
        <item name="android:colorAccent">?colorPrimary</item>
        <item name="android:textColorSecondary">?colorPrimary</item> <!-- for check state -->
    </style>


    <style name="FullWidthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:background">@drawable/full_width_button_bg</item>
    </style>

    <style name="TextView.InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

</resources>
