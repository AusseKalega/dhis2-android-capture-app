<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.dhis2.usescases.main.program.ProgramContract.Presenter" />
    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="15dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/filter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="end"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/periodLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/button_time"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/period_button"
                        android:onClick="@{()->presenter.onTimeButtonClick()}"
                        android:padding="7dp"
                        app:srcCompat="@drawable/ic_view_none"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/button_period_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/period_time_button"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:maxWidth="140dp"
                        android:minWidth="70dp"
                        android:onClick="@{()->presenter.onDateRangeButtonClick()}"
                        android:padding="7dp"
                        android:text="@string/period"
                        android:textColor="?colorAccent" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_org_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/selector_button_round_20"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:minHeight="40dp"
                    android:onClick="@{()->presenter.onOrgUnitButtonClick()}"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="?colorAccent"
                    android:textSize="15sp"
                    android:text="@string/org_unit" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/program_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:initGrid="@{true}"
                    spanCount="@{4}"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    tools:listitem="@layout/item_program" />

                <ProgressBar
                    android:id="@+id/program_progress"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    app:progressColor="@{@color/colorPrimary}" />

                <TextView
                    android:id="@+id/emptyView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="There is no information for the filters selected.\nPlease try changing them."
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/org_unit_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/white_faf"
            app:itemTextColor="?colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/tree_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="40dp" />

                <Button
                    android:id="@+id/org_unit_apply"
                    style="@style/FullWidthButton"
                    android:layout_gravity="bottom"
                    android:text="@string/button_ok" />
            </LinearLayout>
        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
</layout>